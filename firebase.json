{
  "functions": {
    "source": "functions"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api{,/**}",
        "function": {
          "functionId": "api",
          "region": "us-central1"
        }
      },
      {
        "source": "/api-docs{,/**}",
        "function": {
          "functionId": "api",
          "region": "us-central1"
        }
      }
    ]
  }
}
